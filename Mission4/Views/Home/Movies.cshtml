@{
    ViewData["Title"] = "Movies";
}

@model Mission4.Models.MovieResponse

<div class="text-center">
    <h1 class="display-4">Add a Movie</h1><br />

    <form method="post">

        <div asp-validation-summary="All"></div>
        
        <label>Category</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select><br />
        
        <label>Title</label>
        <input asp-for="Title" /><br />

        <label>Year</label>
        <input asp-for="Year" /><br />

        <label>Director</label>
        <input asp-for="Director" /><br />

        <label>Rating</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="UR">UR</option>
        </select><br />

        <label>Edited</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label>Lent To:</label>
        <input asp-for="Lent" /><br />

        <label>Notes</label>
        <input asp-for="Notes" /><br />

        <button type="submit">Submit</button>

    </form>
</div>
